<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:padding="16dp"
    android:background="@drawable/bg_dummy"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/iv_cover_article"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Article"
        android:singleLine="true"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_cover_article"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_author_cover"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/iv_cover_article"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_cover"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_content_cover"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:textSize="10sp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_author_cover"
        app:layout_constraintStart_toEndOf="@+id/iv_cover_article"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_cover"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>