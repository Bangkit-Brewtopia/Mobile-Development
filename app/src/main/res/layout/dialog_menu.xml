<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".main.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="205dp"
        android:layout_margin="25dp"
        android:background="@drawable/bg_menu"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/desc_icon_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/desc_icon_menu"
            app:layout_constraintEnd_toEndOf="@+id/menu"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/menu"
            app:layout_constraintTop_toBottomOf="@+id/menu"
            app:srcCompat="@drawable/ic_account" />

        <ImageView
            android:id="@+id/icon_about"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/desc_icon_menu"
            app:layout_constraintEnd_toEndOf="@+id/icon_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/icon_profile"
            app:layout_constraintTop_toBottomOf="@+id/icon_profile"
            app:srcCompat="@drawable/ic_about" />

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/desc_icon_menu"
            app:layout_constraintEnd_toEndOf="@+id/icon_about"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/icon_about"
            app:layout_constraintTop_toBottomOf="@+id/icon_about"
            app:srcCompat="@drawable/ic_settings" />

        <TextView
            android:id="@+id/menu_account"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="18dp"
            android:gravity="center|center_vertical"
            android:text="@string/account"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/icon_profile"
            app:layout_constraintStart_toEndOf="@+id/icon_profile"
            app:layout_constraintTop_toTopOf="@+id/icon_profile"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/menu_about"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="18dp"
            android:gravity="center|center_vertical"
            android:text="@string/about"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/icon_about"
            app:layout_constraintStart_toEndOf="@+id/icon_about"
            app:layout_constraintTop_toTopOf="@+id/icon_about"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="18dp"
            android:gravity="center|center_vertical"
            android:text="@string/settings"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/icon_settings"
            app:layout_constraintStart_toEndOf="@+id/icon_settings"
            app:layout_constraintTop_toTopOf="@+id/icon_settings"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view_account"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu_account" />

        <View
            android:id="@+id/view_about"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu_about" />

        <View
            android:id="@+id/view_settings"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu_settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>