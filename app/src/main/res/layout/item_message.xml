<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".main.chat.ChatAdapter">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_outgoing"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="10dp"
        android:padding="14dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="367dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_bot_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_incoming"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:padding="14dp"
        android:text=""
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <com.overflowarchives.linkpreview.TwitterPreview
        android:id="@+id/link_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_link"
        android:layout_marginBottom="10dp" />
</RelativeLayout>